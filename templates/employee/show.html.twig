{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>EMPNO</th>
                <td>{{ employee.EMPNO }}</td>
            </tr>
            <tr>
                <th>ENAME</th>
                <td>{{ employee.ENAME }}</td>
            </tr>
            <tr>
                <th>JOB</th>
                <td>{{ employee.JOB }}</td>
            </tr>
            <tr>
                <th>MGR</th>
                <td>{{ employee.MGR }}</td>
            </tr>
            <tr>
                <th>HIREDATE</th>
                <td>{{ employee.HIREDATE ? employee.HIREDATE|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>SAL</th>
                <td>{{ employee.SAL }}</td>
            </tr>
            <tr>
                <th>COMM</th>
                <td>{{ employee.COMM }}</td>
            </tr>
            <tr>
                <th>DEPTNO</th>
                <td>{{ employee.DEPTNO }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_employee_index') }}">back to list</a>

    <a href="{{ path('app_employee_edit', {'EMPNO': employee.EMPNO}) }}">edit</a>

